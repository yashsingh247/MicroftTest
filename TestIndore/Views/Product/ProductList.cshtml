@model IEnumerable<TestIndore.Models.Product>

@{
    ViewBag.Title = "ProductList";
}

<style>
    div.dataTables_wrapper {
        width: auto;
        margin: 0 auto;
    }
    .thumbnail {
        width: 150px; /* Set the width to 150px */
        height: auto; /* Maintain the aspect ratio */
        margin: 10px;
        border: 1px solid #ccc;
        padding: 5px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-xl-4 col-lg-12 col-md-4">
            <div class="form-group">
                <a href="~/Product/AddEditProduct/0" class="btn btn-success"><span class="fa fa-plus"></span> Add New Product</a>
            </div>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-responsive dataTable" id="Customer" width="100%" cellspacing="0">
                    <thead class="bg-gradient-primary" style="color:white;">
                        <tr>

                            <th>Id</th>
                            <th>Product Code&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>Product Name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>Description&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>Product Image&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>Unit&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>Rate&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {

                            foreach (var i in Model)
                            {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => i.ProductID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.ProductCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.ProductName)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => i.Description)
                            </td>
                            <td>
                                <img src="@i.ProductImage" class="thumbnail" alt="@i.FileName" />
                                @*<img src=" class="thumbnail" alt="@i.FileName" />*@
                                @*@Html.DisplayFor(modelItem => i.ProductImage)*@
                            </td>
                            <td>

                                @Html.DisplayFor(modelItem => i.Unit)
                            </td>
                            <td>

                                @Html.DisplayFor(modelItem => i.Rate)
                            </td>


                            <td>
                                @*<a href="#"><span class="fa fa-eye"></span> </a> &nbsp;*@
                                <a href="~/Product/AddEditProduct/@i.ProductID"><span class="fa fa-pen-fancy"></span> </a> &nbsp;  <a href="~/Product/DeleteProduct/@i.ProductID"><span class="fa fa-trash"></span> </a>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
