@model IEnumerable<TestIndore.Models.Customer>

@{
    ViewBag.Title = "CustomerList";
}

<style>
    div.dataTables_wrapper {
        width: auto;
        margin: 0 auto;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-xl-4 col-lg-12 col-md-4">
            <div class="form-group">
                <a href="~/Customer/AddEditCustomer/0" class="btn btn-success"><span class="fa fa-plus"></span> Add New Customer</a>
            </div>
        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Customer List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-responsive dataTable" id="Customer" width="100%" cellspacing="0">
                    <thead class="bg-gradient-primary" style="color:white;">
                        <tr>

                            <th>Id</th>
                            <th>Customer Name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>Customer Address&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>Customer City&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>Pin Code&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => i.CustomerID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.CustomerAddress)
                                    
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => i.CustomerCity)
                                </td>
                                <td>

                                    @Html.DisplayFor(modelItem => i.CustomerPinCode)
                                </td>
                                
                                
                                <td>
                                    @*<a href="#"><span class="fa fa-eye"></span> </a> &nbsp;*@
                                    <a href="~/Customer/AddEditCustomer/@i.CustomerID"><span class="fa fa-pen-fancy"></span> </a> &nbsp;  <a href="~/Customer/DeleteCustomer/@i.CustomerID"><span class="fa fa-trash"></span> </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
